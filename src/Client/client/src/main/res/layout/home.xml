<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="1">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/first_row"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:id="@+id/home_add">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:id="@+id/imageView"
                    android:src="@drawable/add_to_inventory"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add food to inventory via barcode"
                    android:id="@+id/textView"
                    android:layout_alignParentBottom="false"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/imageView"
                    android:maxWidth="100dp"
                    android:gravity="center_horizontal"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:id="@+id/home_remove">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:id="@+id/imageView2"
                    android:src="@drawable/remove_from_inventory"
                    android:focusableInTouchMode="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remove food from inventory via barcode"
                    android:id="@+id/textView2"
                    android:layout_alignParentBottom="false"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/imageView2"
                    android:maxWidth="100dp"
                    android:gravity="center_horizontal"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/first_row"
            android:id="@+id/second_row">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:id="@+id/home_browse">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:id="@+id/imageView3"
                    android:src="@drawable/inventory"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Browse Inventory"
                    android:id="@+id/textView3"
                    android:layout_alignParentBottom="false"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/imageView3"
                    android:maxWidth="100dp"
                    android:gravity="center_horizontal"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:id="@+id/home_search">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:id="@+id/imageView4"
                    android:src="@drawable/search_food"
                    android:focusableInTouchMode="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search Food Manually"
                    android:id="@+id/textView4"
                    android:layout_alignParentBottom="false"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/imageView4"
                    android:maxWidth="100dp"
                    android:gravity="center_horizontal"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>