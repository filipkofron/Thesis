<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/item_background_color"
    android:foregroundGravity="center">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/inventory_list_item_card"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/card_background"
        android:layout_gravity="center"
        android:clickable="false"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/inventory_imageView"
            android:adjustViewBounds="false"
            android:scaleType="centerCrop"
            android:contentDescription="Food image"
            android:src="@drawable/ic_launcher"
            android:baselineAlignBottom="true"
            android:background="@color/food_list_item_image_background"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" />

        <view
            android:layout_width="60dp"
            android:layout_height="60dp"
            class="cz.kofron.foodinventory.client.RemoveView"
            android:id="@+id/view2"
            android:padding="8dp"
            android:background="@color/inventory_item_remove"
            android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Potravina"
            android:id="@+id/inventory_list_item_food_name"
            android:textColor="@color/item_title"
            android:typeface="normal"
            android:textStyle="bold"
            android:layout_gravity="left|center_vertical"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/inventory_imageView"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Počet: 10 ks"
            android:id="@+id/textView"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="right|center_vertical"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/inventory_imageView"
            android:layout_margin="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spotřebujte do:"
            android:id="@+id/textView2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:typeface="normal"
            android:textSize="12sp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginRight="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/textView3"
            android:layout_alignEnd="@+id/textView3"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20.09.2013"
            android:id="@+id/textView3"
            android:layout_gravity="right|center_vertical"
            android:layout_below="@+id/textView2"
            android:layout_toLeftOf="@+id/view2"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-1"
            android:id="@+id/textView4"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/view2"
            android:layout_alignEnd="@+id/view2"
            android:layout_alignLeft="@+id/view2"
            android:layout_alignStart="@+id/view2"
            android:textAlignment="center"
            android:singleLine="false"
            android:gravity="center" />

    </RelativeLayout>

</FrameLayout>
