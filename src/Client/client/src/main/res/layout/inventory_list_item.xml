<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/item_background_color"
    android:foregroundGravity="center">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/inventory_list_item_card"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="right|center_vertical"
        android:clickable="false">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/inventory_imageView"
            android:adjustViewBounds="false"
            android:scaleType="centerCrop"
            android:contentDescription="Food image"
            android:src="@drawable/ic_launcher"
            android:baselineAlignBottom="true"
            android:background="@color/food_list_item_image_background"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Some food name"
            android:id="@+id/inventory_list_item_food_name"
            android:textColor="@color/item_title"
            android:typeface="normal"
            android:textStyle="bold"
            android:layout_gravity="left|center_vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/inventory_imageView"
            android:layout_margin="8dp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="20.09.2013"
                android:id="@+id/textView3"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/textView2"
                android:layout_gravity="center"
                android:layout_margin="10dp" />
        </FrameLayout>

    </RelativeLayout>

</FrameLayout>
