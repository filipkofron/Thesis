<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/rating_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:text="3.5"
            android:textAppearance="@android:style/TextAppearance.Large"/>

        <TextView
            android:id="@+id/rating_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="3dp"
            android:layout_toRightOf="@+id/rating_value"
            android:text="alex777dogeisbest@gmail.com"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/rating_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/rating_user"
            android:layout_alignStart="@+id/rating_user"
            android:layout_below="@+id/rating_user"
            android:text="This is quite decent food that you can buy in this category, although i recommend to look at blabla..."/>
    </RelativeLayout>

</LinearLayout>
